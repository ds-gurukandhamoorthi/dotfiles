! #to use caps lock key as the Escape key (Vim-friendly)
remove Lock = Caps_Lock
keysym Caps_Lock = Escape
! #to use Escape as an additional key (for ulterior binding that would give Ratpoison friendly switch to previous window see ~/.ratpoisonrc, when pressed with shift it would give CapsLock see ~/.xbindkeysrc)
keysym Escape = F13

keycode 108 = Hyper_R
clear mod1
add mod1 = Alt_L
add mod3 = Hyper_R
	
keycode 106 = KP_Divide colon
keycode 91 = comma KP_Decimal
