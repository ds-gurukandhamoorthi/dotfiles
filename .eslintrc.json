{
    "env": {
        "browser": true,
        "es6": true,
        "node": true
    },
    "extends": ["eslint:recommended",    "plugin:react/recommended"],
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaFeatures": {
            "experimentalObjectRestSpread": true,
            "jsx": true,
            "classes" : true
        },
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "react-native"

    ],
    "rules": {
        "no-console": 0,

        "indent": [
            "error",
            4,
            {"SwitchCase" : 1}
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "comma-dangle":["error","always-multiline"]
    }
}
